<Window x:Class="Eva_5._0.InstructionManual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eva_5._0"
        mc:Ignorable="d"
        Title="Instruction Manual" Height="450" Width="800" Closing="InstructionManualWindowClosing" Loaded="InstructionManualWindowLoaded" WindowStyle="None" AllowsTransparency="True" Opacity="0.98" Icon="/Eva Icon.png">


    <Window.Resources>
        <Style x:Key="MyButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                            BorderThickness="1"
                            Padding="4,2" 
                            BorderBrush="Transparent" 
                            CornerRadius="3" 
                            Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF7BBFD8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="{x:Type Hyperlink}" TargetType="{x:Type Hyperlink}">
            <Setter Property="TextDecorations" Value="Underline"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush StartPoint="0.5, 1" EndPoint="1, 0">
            <GradientStop Color="#FF121111" x:Name="WindowOffset" Offset="1"/>
            <GradientStop Color="#FF0D3358"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Rectangle Grid.ColumnSpan="5" Fill="Transparent" MouseDown="MoveTheWindow"/>

        <StackPanel Orientation="Horizontal" Grid.Column ="3" Grid.ColumnSpan="2" HorizontalAlignment="Right">

            <Button x:Name="MinimiseTheWindowButton" Margin="20,20,20,0" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Left" Content="&#xEF2D;" FontFamily="Segoe MDL2 Assets" FontSize="20" Click="MinimiseTheWindow" Style="{StaticResource MyButtonStyle}">
                <Button.Foreground>
                    <LinearGradientBrush StartPoint="0.5, 1" EndPoint="0, 1">
                        <GradientStop Color="#FF7BBFD8" x:Name="MinimiseTheWindowOffset" Offset="1"/>
                        <GradientStop Color="#FF11497F"/>
                    </LinearGradientBrush>
                </Button.Foreground>
            </Button>

            <Button x:Name="NormaliseOrMaximiseTheWindowButton" Margin="0,20,20,0" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Right" Content="&#xEF2E;" FontFamily="Segoe MDL2 Assets" FontSize="20" Click="NormaliseOrMaximiseTheWindow" Style="{StaticResource MyButtonStyle}">
                <Button.Foreground>
                    <LinearGradientBrush StartPoint="0.5, 1" EndPoint="0, 1">
                        <GradientStop Color="#FF7BBFD8" x:Name="NormaliseOrMaximiseButtonOffset" Offset="1"/>
                        <GradientStop Color="#FF11497F"/>
                    </LinearGradientBrush>
                </Button.Foreground>
            </Button>

            <Button x:Name="CloseTheWindowButton" Margin="0,20,20,0" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Right" Content="&#xEF2C;" FontFamily="Segoe MDL2 Assets" FontSize="20" Click="CloseTheWindow" Style="{StaticResource MyButtonStyle}">
                <Button.Foreground>
                    <LinearGradientBrush StartPoint="0.5, 1" EndPoint="0, 1">
                        <GradientStop Color="#FF7BBFD8" x:Name="CloseButtonOffset" Offset="1"/>
                        <GradientStop Color="#FF11497F"/>
                    </LinearGradientBrush>
                </Button.Foreground>
            </Button>
        </StackPanel>


        <TextBlock x:Name="InstructionManualTitle" Grid.Row="1" Grid.ColumnSpan="5" HorizontalAlignment="Center" FontFamily="Bahnschrift" FontSize="40" Text="Instruction Manual">
            <TextBlock.Foreground>
                <LinearGradientBrush>
                    <GradientStop Color="#FF7BBFD8" x:Name="InstructionManualTitleTextBlockOffset" Offset="1"/>
                    <GradientStop Color="#FF1B70C3"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <!--&#x0a;-->

        <ScrollViewer Grid.Row="2" Grid.ColumnSpan="5" Grid.RowSpan="4" Margin="20,0,20,0" VerticalScrollBarVisibility="Auto">

            <StackPanel HorizontalAlignment="Center">

                <TextBlock x:Name="AboutEva" Margin="0,30,0,0" FontFamily="Bahnschrift" FontSize="27" Text="&#x0a;About Eva">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="AboutEvaTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>


                <TextBlock x:Name="AboutEvaContent" Margin="0,30,0,0" FontFamily="Bahnschrift Light" FontSize="24" Text="Eva is an A. I. assistant that has the purpose &#x0a;of helping users multi-task. Eva is achieving&#x0a;this by executing voice commands given by&#x0a;the user.&#x0a;&#x0a;Eva is an open-source project and you can&#x0a;find the project ">

                    <Hyperlink
                    NavigateUri="https://github.com/CSharpTeoMan911/Eva"
                    RequestNavigate="Navigate_To_Eva_Project">
                    here.
                    </Hyperlink>
                    
                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="AboutEvaContentTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>



                <TextBlock x:Name="UserInstructions" Margin="0,30,0,0" FontFamily="Bahnschrift" FontSize="27" Text="&#x0a;&#x0a;&#x0a;User Instructions">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="UserInstructionsTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>


                <TextBlock x:Name="UserInstructionsContent" Margin="0,30,0,0" FontFamily="Bahnschrift Light, Segoe MDL2 Assets" FontSize="24" Text="&#x0a;In order for Eva to execute commands, the&#x0a;user must do the following steps:&#x0a;&#x0a;1)  Press the &#xF781; button.&#x0a;&#x0a;2) When the button is displaying &#xE1D6;,&#x0a;    Eva is actively listening.&#x0a;&#x0a;3) Tell Eva the wake word [ Eva listen ],&#x0a;    followed by a command. You must&#x0a;    wait one second before giving it a&#x0a;    command.&#x0a;&#x0a;&#x0a;">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="UserInstructionsContentTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>


                <TextBlock x:Name="Commands" Margin="0,30,0,0" FontFamily="Bahnschrift" FontSize="27" Text="&#x0a;&#x0a;&#x0a;Commands">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="CommandsTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    
                </TextBlock>


                <TextBlock x:Name="CommandsContent" Margin="0,30,0,0" FontFamily="Bahnschrift Light, Segoe MDL2 Assets" FontSize="24" Text="&#x0a;In order for Eva to open applications follow&#x0a;the following formats:&#x0a;&#x0a;open [Application]&#x0a;&#x0a;open [Application] now&#x0a;&#x0a;open [Application] please&#x0a;&#x0a;please open [Application]&#x0a;&#x0a;&#x0a;[ Example: open chrome ]&#x0a;&#x0a;&#x0a;&#x0a;List of applications Eva can open:&#x0a;&#x0a;- chrome&#x0a;&#x0a;-edge&#x0a;&#x0a;-firefox&#x0a;&#x0a;-opera&#x0a;&#x0a;-calculator&#x0a;&#x0a;-paint&#x0a;&#x0a;-file explorer&#x0a;&#x0a;-gmail&#x0a;&#x0a;-skype&#x0a;&#x0a;-notepad&#x0a;&#x0a;-task manager&#x0a;&#x0a;-calendar&#x0a;&#x0a;-weather&#x0a;&#x0a;-snip and sketch&#x0a;&#x0a;-word&#x0a;&#x0a;-powerpoint&#x0a;&#x0a;-excel&#x0a;&#x0a;-onedrive&#x0a;&#x0a;&#x0a;&#x0a;In order for Eva to close applications follow&#x0a;the following formats:&#x0a;&#x0a;close [Application]&#x0a;&#x0a;close [Application] now&#x0a;&#x0a;close [Application] please&#x0a;&#x0a;please close [Application]&#x0a;&#x0a;&#x0a;[ Example: close chrome ]&#x0a;&#x0a;&#x0a;&#x0a;List of applications Eva can close:&#x0a;&#x0a;-chrome&#x0a;&#x0a;-edge&#x0a;&#x0a;-firefox&#x0a;&#x0a;-opera&#x0a;&#x0a;-calculator&#x0a;&#x0a;-paint&#x0a;&#x0a;-skype&#x0a;&#x0a;-notepad&#x0a;&#x0a;-calendar&#x0a;&#x0a;-weather&#x0a;&#x0a;-snip and sketch&#x0a;&#x0a;&#x0a;&#x0a;In order for Eva to search content&#x0a;on web application follow the&#x0a;following formats:&#x0a;&#x0a;search [Content] on [Web Application Keyword]&#x0a;&#x0a;search on [Web Application Keyword] [Content]&#x0a;&#x0a;please search on [Web Application Keyword] [Content]&#x0a;&#x0a;please search [Content] on [Web Application Keyword]&#x0a;&#x0a;&#x0a;[ Example: search robots on youtube ]&#x0a;&#x0a;&#x0a;List of applications Eva can search&#x0a;content on:&#x0a;&#x0a;-google&#x0a;&#x0a;-google news&#x0a;&#x0a;-google images&#x0a;&#x0a;-ebay&#x0a;&#x0a;-netflix&#x0a;&#x0a;-wikipedia">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="CommandsContentTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>


                <TextBlock x:Name="Troubleshooting" Margin="0,30,0,0" FontFamily="Bahnschrift" FontSize="27" Text="&#x0a;&#x0a;&#x0a;Troubleshooting">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="TroubleshootingTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>

                </TextBlock>



                <TextBlock x:Name="TroubleshootingContents1" Margin="0,30,0,0" FontFamily="Bahnschrift Light, Segoe MDL2 Assets" FontSize="24" Text="&#x0a;If Eva cannot hear you open Control Panel,&#x0a;">
                    
                    <Hyperlink
                        NavigateUri=""
                        RequestNavigate="Open_Control_Panel_At_Speech_Recognition">
                        go to Ease of access -> Speech Recognition
                    </Hyperlink>


                    
                    

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="TroubleshootingContentTextBlockOffset1" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>

                </TextBlock>



                <TextBlock x:Name="TroubleshootingContents2" Margin="0,0,0,0" FontFamily="Bahnschrift Light, Segoe MDL2 Assets" FontSize="24" Text="and select Set up microphone.&#x0a;&#x0a;If Eva cannot understand you clearly,&#x0a;open Control Panel and then go to:&#x0a;Ease of Access -> Speech Recognition ->&#x0a;">
                    
                    <Hyperlink
                        NavigateUri=""
                        RequestNavigate="Open_Control_Panel_At_Speech_Recognition">
                        Train your computer to better understand you
                    </Hyperlink>





                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="TroubleshootingContentTextBlockOffset2" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>

                </TextBlock>


                <TextBlock x:Name="TroubleshootingContents3" Margin="0,0,0,0" FontFamily="Bahnschrift Light, Segoe MDL2 Assets" FontSize="24" Text="&#x0a;Follow the instructions for speech calibration&#x0a;and read minimum 8 paragraphs.">
                   
                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="TroubleshootingContentTextBlockOffset3" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>

                </TextBlock>


                
            </StackPanel>

        </ScrollViewer>

    </Grid>
</Window>
