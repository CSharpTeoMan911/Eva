<Window x:Class="Eva_5._0.InstructionManual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eva_5._0"
        mc:Ignorable="d"
        Title="Instruction Manual" Height="450" Width="800" Closing="InstructionManualWindowClosing" Loaded="InstructionManualWindowLoaded" SizeChanged="Window_Size_Changed" WindowStyle="None" AllowsTransparency="True" Opacity="0.98" Icon="/Eva icon.png">



    <!--/////////////////////////////////////////////////////////////////////////////
        ///                                                                       ///
        ///                   PRODUCT: EVA A.I. ASSISTANT                         ///
        ///                                                                       ///
        ///                   AUTHOR: TEODOR MIHAIL                               ///
        ///                                                                       ///
        ///                                                                       ///
        /// ANY UNAUTHORISED TRADEMARK USE OF THIS SOFTWARE IS PUNISHABLE BY LAW  ///
        ///                                                                       ///
        /// THE AUTHOR OF THIS SOFTWARE DOES NOT LET ANY PEOPLE PATENT OR USE     ///
        /// THIS PRODUCT'S TRADEMARK.                                             ///
        ///                                                                       ///
        /// DO NOT REMOVE THIS FILE HEADER                                        ///
        ///                                                                       ///
        /////////////////////////////////////////////////////////////////////////////-->


    <Window.Clip>
        <RectangleGeometry x:Name="Instruction_Manual_Geometry" Rect="0,0,800,450" RadiusX="20" RadiusY="20"/>
    </Window.Clip>
    

    

    <Window.Background>
        <LinearGradientBrush StartPoint="0.5, 1" EndPoint="1, 0">
            <GradientStop Color="#FF121111" x:Name="WindowOffset" Offset="1"/>
            <GradientStop Color="#FF0D3358"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Rectangle Grid.ColumnSpan="5" Fill="Transparent" MouseDown="MoveTheWindow"/>

        <StackPanel Orientation="Horizontal" Grid.Column ="3" Grid.ColumnSpan="2" HorizontalAlignment="Right">

            <Button x:Name="MinimiseTheWindowButton" Margin="20,20,20,0" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Left" Content="&#xEF2D;" FontFamily="Segoe MDL2 Assets" FontSize="20" Click="MinimiseTheWindow" Style="{StaticResource MyButtonStyle}">

                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>

                <Button.Foreground>
                    <LinearGradientBrush StartPoint="0.5, 1" EndPoint="0, 1">
                        <GradientStop Color="#FF7BBFD8" x:Name="MinimiseTheWindowOffset" Offset="1"/>
                        <GradientStop Color="#FF11497F"/>
                    </LinearGradientBrush>
                </Button.Foreground>
            </Button>

            <Button x:Name="NormaliseOrMaximiseTheWindowButton" Margin="0,20,20,0" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Right" Content="&#xEF2E;" FontFamily="Segoe MDL2 Assets" FontSize="20" Click="NormaliseOrMaximiseTheWindow" Style="{StaticResource MyButtonStyle}">

                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>

                <Button.Foreground>
                    <LinearGradientBrush StartPoint="0.5, 1" EndPoint="0, 1">
                        <GradientStop Color="#FF7BBFD8" x:Name="NormaliseOrMaximiseButtonOffset" Offset="1"/>
                        <GradientStop Color="#FF11497F"/>
                    </LinearGradientBrush>
                </Button.Foreground>
            </Button>

            <Button x:Name="CloseTheWindowButton" Margin="0,20,20,0" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Right" Content="&#xEF2C;" FontFamily="Segoe MDL2 Assets" FontSize="20" Click="CloseTheWindow" Style="{StaticResource MyButtonStyle}">

                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>

                <Button.Foreground>
                    <LinearGradientBrush StartPoint="0.5, 1" EndPoint="0, 1">
                        <GradientStop Color="#FF7BBFD8" x:Name="CloseButtonOffset" Offset="1"/>
                        <GradientStop Color="#FF11497F"/>
                    </LinearGradientBrush>
                </Button.Foreground>
            </Button>
        </StackPanel>


        <TextBlock x:Name="InstructionManualTitle" Grid.Row="1" Grid.ColumnSpan="5" HorizontalAlignment="Center" FontFamily="Bahnschrift" FontSize="40" Text="Instruction Manual">
            <TextBlock.Foreground>
                <LinearGradientBrush>
                    <GradientStop Color="#FF7BBFD8" x:Name="InstructionManualTitleTextBlockOffset" Offset="1"/>
                    <GradientStop Color="#FF1B70C3"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        

        <ScrollViewer Grid.Row="2" Grid.ColumnSpan="5" Grid.RowSpan="4" Margin="20,0,20,0" VerticalScrollBarVisibility="Auto">

            <StackPanel HorizontalAlignment="Center">

                <TextBlock x:Name="AboutEva" Margin="0,30,0,0" FontFamily="Bahnschrift" FontSize="27" Text="&#x0a;About Eva">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="AboutEvaTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>


                <TextBlock x:Name="AboutEvaContent" Margin="0,30,0,0" FontFamily="Bahnschrift Light" FontSize="24" Text="Eva is an A. I. assistant that has the purpose &#x0a;of helping users multi-task. Eva is achieving&#x0a;this by executing voice commands given by&#x0a;the user.&#x0a;&#x0a;Eva is an open-source project and you can&#x0a;find the project ">

                    <Hyperlink
                    NavigateUri="https://github.com/CSharpTeoMan911/Eva"
                    RequestNavigate="Navigate_To_Eva_Project">
                    here.
                    </Hyperlink>
                    
                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="AboutEvaContentTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>



                <TextBlock x:Name="UserInstructions" Margin="0,30,0,0" FontFamily="Bahnschrift" FontSize="27" Text="&#x0a;&#x0a;&#x0a;User Instructions">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="UserInstructionsTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>


                <TextBlock x:Name="UserInstructionsContent" Margin="0,30,0,0" FontFamily="Bahnschrift Light, Segoe MDL2 Assets" FontSize="24" Text="&#x0a;In order for Eva to execute commands, the&#x0a;user must do the following steps:&#x0a;&#x0a;1)  Press the &#xF781; button.&#x0a;&#x0a;2) When the button is displaying &#xE1D6;,&#x0a;    Eva is actively listening.&#x0a;&#x0a;3) Tell Eva the wake word [ Wake Eva ],&#x0a;    followed by a command. You must&#x0a;    wait one second before giving it a&#x0a;    command.&#x0a;&#x0a;    When the circle is changing its&#x0a;    colour in a bright blue colour,&#x0a;    and the timer is initiated,&#x0a;    Eva is actively listening.&#x0a;&#x0a;    Because the online speech&#x0a;    recognition engine has a &#x0a;    timeout, when the timer &#x0a;    reaches ' 0 ', Eva will stop &#x0a;    listening.&#x0a;&#x0a;    Eva has a delay mechanism&#x0a;    which prevents it from&#x0a;    taking commands more&#x0a;    often than once every&#x0a;    2 seconds. When the&#x0a;    circle turns red, wait&#x0a;    until it turns blue&#x0a;    again to give a&#x0a;    command.">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="UserInstructionsContentTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>


                <TextBlock x:Name="Commands" Margin="0,30,0,0" FontFamily="Bahnschrift" FontSize="27" Text="&#x0a;&#x0a;&#x0a;Commands">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="CommandsTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    
                </TextBlock>


                <TextBlock x:Name="CommandsContent" Margin="0,30,0,0" FontFamily="Bahnschrift Light, Segoe MDL2 Assets" FontSize="24" Text="&#x0a;In order for Eva to open applications, follow&#x0a;the following formats:&#x0a;&#x0a;open [ Application ]&#x0a;&#x0a;open [ Application ] now&#x0a;&#x0a;open [ Application ] please&#x0a;&#x0a;please open [ Application ]&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;List of applications Eva can open:&#x0a;&#x0a;-chrome&#x0a;&#x0a;-edge&#x0a;&#x0a;-firefox&#x0a;&#x0a;-opera&#x0a;&#x0a;-calculator&#x0a;&#x0a;-paint&#x0a;&#x0a;-file explorer&#x0a;&#x0a;-gmail&#x0a;&#x0a;-skype&#x0a;&#x0a;-notepad&#x0a;&#x0a;-task manager&#x0a;&#x0a;-command prompt&#x0a;&#x0a;-powershell&#x0a;&#x0a;-windows terminal&#x0a;&#x0a;-visual studio 2019&#x0a;&#x0a;-visual studio 2022&#x0a;&#x0a;-visual studio code&#x0a;&#x0a;-calendar&#x0a;&#x0a;-weather&#x0a;&#x0a;-snip and sketch&#x0a;&#x0a;-word&#x0a;&#x0a;-powerpoint&#x0a;&#x0a;-excel&#x0a;&#x0a;-onedrive&#x0a;&#x0a;-settings&#x0a;&#x0a;-disk cleanup&#x0a;&#x0a;-control panel&#x0a;&#x0a;-temporary files&#x0a;&#x0a;-recycle bin cleanup&#x0a;&#x0a;&#x0a;&#x0a;Example:&#x0a;&#x0a;[ Command format ] = open [ Application ]&#x0a;&#x0a;[ Application ] = chrome&#x0a;&#x0a;[ Command ] = open chrome&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;Eva can open the settings menu at any&#x0a;settings page.&#x0a;&#x0a;For example, if you want&#x0a;to open the settings menu:&#x0a;&#x0a;[ Application ] = settings&#x0a;&#x0a;&#x0a;&#x0a;In order for Eva to open a settings page&#x0a;or sub-section of a page:&#x0a;&#x0a;[ Application ] = [ page name [ or ] sub-section name ] + settings&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;If the sub-section name ends with settings&#x0a;do not add settings:&#x0a;&#x0a;[ Application ] = [ sub-section name ]&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;Examples:&#x0a;&#x0a;Page name = Devices&#x0a;&#x0a;[ Command format ] = open [ Application ]&#x0a;&#x0a;[ Application ] = devices settings&#x0a;&#x0a;[ Command ] = open devices settings&#x0a;&#x0a;&#x0a;&#x0a;Sub-section (field within a page,&#x0a;in this example Devices) = Mouse&#x0a;&#x0a;[ Command format ] = open [ Application ]&#x0a;&#x0a;[ Application ] = mouse settings&#x0a;&#x0a;[ Command ] = open mouse settings&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;In order for Eva to set a timer, follow&#x0a;the following formats:&#x0a;&#x0a;set a [ Time interval ] timer&#x0a;&#x0a;please set a [ Time interval ] timer&#x0a;&#x0a;set a [ Time interval ] timer please&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;Example:&#x0a;&#x0a;[ Command format ] = set a [ Time interval ] timer&#x0a;&#x0a;[ Time interval ] = 1 hour, 45 minutes and 10 seconds&#x0a;&#x0a;[ Command ] = set a 1 hour, 45 minutes and 10 seconds timer&#x0a;&#x0a;&#x0a;If the timer is set, the &#xE2AD; button will&#x0a;change from colour red to blue.&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;To cancel the timer set, open the timer&#x0a;window by pressing the &#xE2AD; button&#x0a;and then cancel it by pressing the&#x0a;&#xF13D; button, or by giving it a close&#x0a;command by telling it in one of&#x0a;the command formats:&#x0a;&#x0a;&#x0a;[ Application ] = timer&#x0a;&#x0a;&#x0a;&#x0a;close [ Application ]&#x0a;&#x0a;close timer&#x0a;&#x0a;&#x0a;&#x0a;close [ Application ] please&#x0a;&#x0a;close timer please&#x0a;&#x0a;&#x0a;&#x0a;close [ Application ] now&#x0a;&#x0a;close timer now&#x0a;&#x0a;&#x0a;&#x0a;please close [ Application ]&#x0a;&#x0a;please close timer&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;In order for Eva to close applications, follow&#x0a;the following formats:&#x0a;&#x0a;close [ Application ]&#x0a;&#x0a;close [ Application ] now&#x0a;&#x0a;close [ Application ] please&#x0a;&#x0a;please close [ Application ]&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;List of applications Eva can close:&#x0a;&#x0a;-chrome&#x0a;&#x0a;-edge&#x0a;&#x0a;-firefox&#x0a;&#x0a;-opera&#x0a;&#x0a;-calculator&#x0a;&#x0a;-paint&#x0a;&#x0a;-skype&#x0a;&#x0a;-notepad&#x0a;&#x0a;-calendar&#x0a;&#x0a;-weather&#x0a;&#x0a;-snip and sketch&#x0a;&#x0a;-settings&#x0a;&#x0a;-task manager&#x0a;&#x0a;-command prompt&#x0a;&#x0a;-powershell&#x0a;&#x0a;-windows terminal&#x0a;&#x0a;-visual studio 2019&#x0a;&#x0a;-visual studio 2022&#x0a;&#x0a;-visual studio code&#x0a;&#x0a;-disk cleanup&#x0a;&#x0a;-timer&#x0a;&#x0a;&#x0a;&#x0a;Example:&#x0a;&#x0a;[ Command format ] = close [ Application ]&#x0a;&#x0a;[ Application ] = chrome&#x0a;&#x0a;[ Command ] = close chrome&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;In order for Eva to search content&#x0a;on web applications, follow the&#x0a;following formats:&#x0a;&#x0a;search [ Content ] on [ Web Application ]&#x0a;&#x0a;search on [ Web Application ] [ Content ]&#x0a;&#x0a;please search on [ Web Application ] [Content]&#x0a;&#x0a;please search [ Content ] on [ Web Application ]&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;List of applications Eva can search&#x0a;content on:&#x0a;&#x0a;-google&#x0a;&#x0a;-google news&#x0a;&#x0a;-google images&#x0a;&#x0a;-ebay&#x0a;&#x0a;-netflix&#x0a;&#x0a;-wikipedia&#x0a;&#x0a;-amazon&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;Example:&#x0a;&#x0a;[ Command format ] = search [ Content ] on [ Web Application ]&#x0a;&#x0a;[ Application ] = youtube&#x0a;&#x0a;[ Content ] = robots &#x0a;&#x0a;[ Command ] = search robots on youtube&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;In order for Eva to take a&#x0a;screenshot, follow the&#x0a;following formats:&#x0a;&#x0a;screenshot&#x0a;&#x0a;take screenshot&#x0a;&#x0a;take a screenshot&#x0a;&#x0a;take a screenshot please&#x0a;&#x0a;please take a screenshot&#x0a;&#x0a;&#x0a;&#x0a;&#x0a;">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="CommandsContentTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>



                <TextBlock x:Name="ExtraFeatures" Margin="0,30,0,0" FontFamily="Bahnschrift" FontSize="27" Text="&#x0a;&#x0a;&#x0a;Extra features">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="ExtraFeaturesTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>

                </TextBlock>



                <TextBlock x:Name="ExtraFeaturesContent" FontFamily="Bahnschrift Light, Segoe MDL2 Assets" FontSize="24" Text="&#x0a;&#x0a;If you want to prevent the accidental&#x0a;activation of Eva without pressing&#x0a;the &#xEC71; button, just press the  &#xEF2D;&#x0a;button in order to minimise the&#x0a;application. When you want to&#x0a;give Eva commands just&#x0a;restore the application&#x0a;window.&#x0a;&#x0a;&#x0a;&#x0a;">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="ExtraFeaturesContentTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>

                </TextBlock>



                <TextBlock x:Name="Troubleshooting" Margin="0,30,0,0" FontFamily="Bahnschrift" FontSize="27" Text="&#x0a;&#x0a;&#x0a;Troubleshooting">

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="TroubleshootingTextBlockOffset" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>

                </TextBlock>



                <TextBlock x:Name="TroubleshootingContents1" Margin="0,30,0,0" FontFamily="Bahnschrift Light, Segoe MDL2 Assets" FontSize="24" Text="&#x0a;If Eva cannot hear you open the Settings page and go to&#x0a;">
                    
                    <Hyperlink
                        NavigateUri=""
                        RequestNavigate="Open_Settings_At_Speech_Recognition">
                        <StackPanel>
                            <TextBlock Text="Time and Language -> Speech -> Microphone. Under the
                        &#x0a;Microphone section, press the Get Stared button and 
                        &#x0a;follow the instructions.&#x0a;&#x0a;&#x0a;"/>
                        </StackPanel>
                    </Hyperlink>


                    
                    

                    <TextBlock.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Color="#FF7BBFD8" x:Name="TroubleshootingContentTextBlockOffset1" Offset="1"/>
                            <GradientStop Color="#FF1B70C3"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>

                </TextBlock>



               


                
            </StackPanel>

        </ScrollViewer>

    </Grid>
</Window>
