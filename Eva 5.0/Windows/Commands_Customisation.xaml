<Window x:Class="Eva_5._0.Commands_Customisation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eva_5._0"
        mc:Ignorable="d"
        Title="Commands" Height="340" Width="650" Topmost="True" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Loaded="Window_Loaded" Icon="../Images/Eva icon.png">

    <Window.Clip>
        <RectangleGeometry Rect="0,0,650,340" RadiusX="10" RadiusY="10"/>
    </Window.Clip>

    <Window.Background>
        <LinearGradientBrush StartPoint="0.5, 1">
            <GradientStop Offset="1" Color="#FF004B94"/>
            <GradientStop Color="#FF0E4880"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <DataTemplate x:Key="CommandItem">
            
        </DataTemplate>
    </Window.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Rectangle Fill="Transparent" Grid.ColumnSpan="9" MouseDown="Move_Window"/>



        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" Grid.Column="7" Grid.RowSpan="2" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button FontFamily="Segoe MDL2 Assets"  Content="&#xEF2C;" Width="23" Height="23" FontSize="13" Foreground="White" Style="{StaticResource MyWhiteButtonStyle}" Click="CloseWindow"/>
        </StackPanel>

        <StackPanel Grid.ColumnSpan="5" Orientation="Horizontal">
            <Button Margin="10,0,0,0" FontFamily="Corbel, Segoe MDL2 Assets" VerticalAlignment="Center" FontSize="20" Style="{StaticResource MyCommandPalletButtonStyle}" Click="AddCommand">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="15" Padding="2" FontFamily="Corbel Light" Text="Add command" VerticalAlignment="Center" Foreground="White"/>
                        <TextBlock FontSize="15" Margin="10,0,0,0" FontFamily="Segoe MDL2 Assets" Text="&#xE109;" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Margin="10,0,0,0" FontFamily="Corbel, Segoe MDL2 Assets" VerticalAlignment="Center" FontSize="20" Style="{StaticResource MyCommandPalletButtonStyle}" Click="Reset_Commands">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="15" Padding="2" FontFamily="Corbel Light" Text="Reset" VerticalAlignment="Center" Foreground="White"/>
                        <TextBlock FontSize="15" Margin="10,0,0,0" FontFamily="Segoe MDL2 Assets" Text="&#xE117;" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
       

        <ScrollViewer   x:Name="Main_Content_ScrollViewer" Grid.Row="1" Grid.RowSpan="8" Grid.ColumnSpan="9" Background="White">
            <StackPanel x:Name="Main_Content" HorizontalAlignment="Center" VerticalAlignment="Center">
                
            </StackPanel>
        </ScrollViewer>


    </Grid>
</Window>
