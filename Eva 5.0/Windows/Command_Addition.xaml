<Window x:Class="Eva_5._0.Command_Addition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eva_5._0"
        mc:Ignorable="d"
        Title="Command Addition" Height="160" Width="650" Topmost="True" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Loaded="Window_Loaded" Closing="Window_Closing" Icon="../Images/Eva icon.png">

    <Window.Clip>
        <RectangleGeometry Rect="0,0,650,160" RadiusX="10" RadiusY="10"/>
    </Window.Clip>

    <Window.Background>
        <LinearGradientBrush StartPoint="0.5, 1">
            <GradientStop Offset="1" Color="#FF004B94"/>
            <GradientStop Color="#FF0E4880"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <DataTemplate x:Key="CommandTemplate" DataType="local:CommandCharacteristics">
            <StackPanel Orientation="Horizontal" Margin="10,20,0,10">
                <TextBlock Text="Command: " FontSize="16" Margin="5,0,0,0"/>
                <TextBox FontSize="16" Width="120" Text="{Binding command}"/>

                <TextBlock Text="Content: " FontSize="16" Margin="20,0,0,0"/>
                <TextBox Margin="5,0,0,0" FontSize="16" Width="120" Text="{Binding content}"/>

                <TextBlock Text="Type: " FontSize="16" Margin="20,0,0,0" Visibility="{Binding type_panel_visibility}"/>

                <StackPanel Orientation="Horizontal" Visibility="{Binding type_panel_visibility}">
                    <Button FontSize="16" FontFamily="Segoe MDL2 Assets" Content="&#xE016;" Click="PreviousType"/>
                    <TextBox FontSize="16" Width="45" TextAlignment="Center" Text="{Binding type}"/>
                    <Button FontSize="16" FontFamily="Segoe MDL2 Assets" Content="&#xE017;" Click="NextType"/>
                </StackPanel>

                <Button FontFamily="Segoe MDL2 Assets" Margin="30,0,0,0" FontSize="16" Content="&#xE105;" Click="AddCommand"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Rectangle Fill="Transparent"  Grid.RowSpan="2" Grid.ColumnSpan="9" MouseDown="Move_Window"/>



        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Grid.Column="7" Grid.RowSpan="3" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button FontFamily="Segoe MDL2 Assets"  Content="&#xEF2C;" Width="23" Height="23" FontSize="13" Foreground="White" Style="{StaticResource MyWhiteButtonStyle}" Click="CloseWindow"/>
        </StackPanel>

        <StackPanel Name="Main_Content" Grid.Row="2" Grid.RowSpan="4" Grid.ColumnSpan="9" Background="White">
            <ItemsControl ItemTemplate="{StaticResource CommandTemplate}" ItemsSource="{Binding command_format}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.RowSpan="3" Grid.ColumnSpan="9" Background="#FFE6E6E6">
            <StackPanel Width="660" Orientation="Horizontal">
                <TextBlock Margin="20,0,0,0" VerticalAlignment="Center" FontSize="14" Text="Test the command: "/>
                <TextBox x:Name="Eva_Command" Margin="5,0,0,0" FontFamily="Corbel Light" VerticalAlignment="Center" Width="450" IsReadOnly="True" FontSize="18"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
