            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0.5, 1" EndPoint="0, 1">
                    <GradientStop Color="#FF054E3B" x:Name="Loading_TextBlockOffset" Offset="1"/>
                    <GradientStop Color="#FF0FFDCC"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>



    </Grid>-->
</Window>
